{
  "security": {
    "key_size": 256,
    "hash_algorithm": "sha256",
    "curve": "secp256r1",
    "proof_version": "1.0.0"
  },
  "performance": {
    "max_memory_mb": 4096,
    "max_threads": 4,
    "batch_size": 1,
    "cache_size": 1000
  },
  "monitoring": {
    "enable_metrics": true,
    "enable_profiling": true,
    "log_level": "INFO"
  },
  "validation": {
    "strict_mode": true,
    "validate_inputs": true,
    "validate_outputs": true
  }
}